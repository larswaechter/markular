{
  "name": "markular-workspace",
  "version": "0.0.0",
  "description": "NG Workspace for Markular. See projects/markular for library.",
  "scripts": {
    "serve": "ng serve demo",
    "build": "ng build markular --watch",
    "build:prod": "ng build markular --configuration production && cp README.md dist/markular/",
    "test": "ng test markular --browsers=ChromeHeadless --no-watch"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.0.5",
    "@angular/compiler": "^21.0.5",
    "@angular/core": "^21.0.5",
    "@angular/forms": "^21.0.5",
    "@angular/platform-browser": "^21.0.5",
    "@angular/platform-server": "^21.0.5",
    "@angular/router": "^21.0.5",
    "@angular/ssr": "^21.0.3",
    "dompurify": "^3.3.1",
    "express": "^5.2.1",
    "marked": "^17.0.1",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "^0.16.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
    "@angular/compiler-cli": "^21.0.5",
    "@types/express": "^5.0.6",
    "@types/jasmine": "~5.1.13",
    "@types/node": "^25.0.3",
    "jasmine-core": "~5.13.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^21.0.1",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3"
  }
}
